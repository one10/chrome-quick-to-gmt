{
  "name": "chrome-quick-to-gmt",
  "description": "Convert free-form dates back and forth between local TZ and GMT",
  "version": "1.0",
  "permissions": [
  ],
  "browser_action": {
    "default_title": "chrome-quick-to-gmt",
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/date.js"
      ]
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
